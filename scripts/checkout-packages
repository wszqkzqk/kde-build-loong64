#!/bin/bash

SCRIPT=$(readlink -f "$0")
SCRIPTPATH=$(dirname "$SCRIPT")

. ${SCRIPTPATH}/common

mkdir -p ${packages_dir}
cd ${packages_dir}

for i in ${depPkgName} ${optPkgName}; do
  if [ ! -d $i ]; then
    if ${__REMOTE_BUILD__}; then
      echo "Trying to clone $i on the remote server"
      pkgctl repo clone --protocol https $i 
    else
      echo "Local"
      pkgctl repo clone $i
    fi
  fi
  _pushd $i
    git checkout $1
    git pull origin $1
  _popd
done
